#!/bin/bash
# .forge/config - Project-specific Forge configuration
# Place this file at $REPO_ROOT/.forge/config
# These settings override global config for this project only.

# =============================================================================
# Project Identity
# =============================================================================

# Override auto-detected project name (defaults to repo directory name)
# FORGE_PROJECT_NAME="my-project"

# =============================================================================
# Worktree Location
# =============================================================================

# Override worktree directory for this project
# FORGE_WORKTREE_DIR="$HOME/Dev/my-project-worktrees"

# =============================================================================
# Scratchpad Location
# =============================================================================

# Override scratchpad file path (defaults to .forge/scratch.md)
# SCRATCHPAD_FILE="$FORGE_PROJECT_ROOT/.forge/scratch.md"

# =============================================================================
# AWS Integration
# =============================================================================

# Skip AWS credential checks (true for non-AWS projects)
# SKIP_AWS_CHECK=true

# AWS profile override for this project
# FORGE_AWS_PROFILE="my-aws-profile"

# =============================================================================
# Workflow Defaults
# =============================================================================

# Default workflow mode: supervised or unsupervised
# WORKFLOW_MODE="supervised"

# Assessment timeout for this project (complex projects may need longer)
# FORGE_ASSESSMENT_TIMEOUT=120
